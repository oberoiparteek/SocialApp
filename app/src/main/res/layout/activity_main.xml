<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="15dp"
        android:text="Social App"
        android:textColor="@color/colorButtonRed"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/gole">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="bt_event_login"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:backgroundTint="@color/black"
            app:icon="@drawable/ic_login" />

        <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:onClick="bt_event_signup"
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:text="SignUp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:backgroundTint="@color/colorButtonRed"
            app:icon="@drawable/ic_signup" />

    </LinearLayout>
</LinearLayout>