<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_members"
    android:elevation="4dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="#ffffff"
    android:paddingTop="5dp"
    android:paddingBottom="5px"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/ic_user_stub"
            android:paddingLeft="10sp"
            android:id="@+id/im_dialog_member_photo"
            android:layout_height="50dp"
            android:layout_weight="0.3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dialog_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member Name"

                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_dialog_member_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9653894173"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="10sp"
                android:textColor="#808080"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
