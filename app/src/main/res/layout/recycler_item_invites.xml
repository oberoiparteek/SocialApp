<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_invites"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_group_name"
                android:paddingLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invited By"
                android:paddingLeft="10sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#808080"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/ic_user_stub"
                    android:paddingLeft="10sp"
                    android:id="@+id/im_inviter_photo"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_group_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="10sp"
                    android:textColor="#808080"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_group_owner_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9653894173"
                    android:paddingLeft="10sp"
                    android:textColor="#808080"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_height="wrap_content"
                android:foregroundTint="#085A3A"
                android:text="ACCEPT"
                android:textColor="#085A3A"
                android:id="@+id/bt_accept_invite"
                android:layout_weight="0.5"/>
            <android.support.design.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_reject_invite"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:foregroundTint="#FF0000"
                android:layout_weight="0.5"
                android:textColor="#FF0000"
                android:text="REJECT"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
